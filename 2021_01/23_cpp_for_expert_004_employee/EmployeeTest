#include<iostream>
#include "Employee.h"


using namespace std;
using namespace Records;

int main()
{
	cout << "Testing the Employee Class." << endl;
	Employee emp;
	emp.setFirstName("John");
	emp.setLastName("Tito");
	emp.setEmployeeNumber(69);
	emp.setSalary(50000);
	emp.promote();
	emp.promote(50);
	emp.hire();
	emp.display();
	return 0;
}
